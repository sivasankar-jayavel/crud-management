<%- include('layouts/header') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card-shadow">
                    <div class="card-body p-4">
                        <form action="/add" method="post" id="add-form">
                            <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control form-control-lg"
                                    placeholder="Enter Name..." required>
                            </div>
                            <div class="mb-3">
                                <label for="name">License Number</label>
                                <input type="text" name="licenseNumber" class="form-control form-control-lg"
                                    placeholder="Enter License Number..." required>
                            </div>
                            <div class="mb-3">
                                <label for="name">DOB</label>
                                <input type="text" name="dob" class="form-control form-control-lg"
                                    placeholder="Enter DD/MM/YYYY ..." required>
                            </div>
                            <div class="mb-3">
                                <label for="name">Age</label>
                                <input type="text" name="age" class="form-control form-control-lg"
                                    placeholder="Enter Age..." required>
                            </div>
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Add Nurse" class="btn btn-primary btn-lg">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('layouts/footer') %>