<%- include('layouts/header') %>
    <div class="container">
        <div class="row my-4">
            <div class="mb-3">
                <a href="/add" class="btn btn-primary"><i class="fas fa-user-plus me-1"></i>Add</a>
                <a href="/download/csv" class="btn btn-primary"><i class="fas fa-download me-1"
                        aria-hidden="true"></i>Download
                    CSV</a>
                <a href="/download/excel" class="btn btn-primary"><i class="fas fa-download me-1"
                        aria-hidden="true"></i>Download
                    Excel</a>
            </div>
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive">
                            <% if (nurse !='' ) { %>
                                <table class="table table-striped text-center my-3">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>License Number</th>
                                            <th>DOB</th>
                                            <th>Age</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% nurse.forEach((row,index)=> { %>
                                            <tr class="align-middle">
                                                <td>
                                                    <%= index %>
                                                </td>
                                                <td>
                                                    <%= row.name %>
                                                </td>
                                                <td>
                                                    <%= row.licenseNumber %>
                                                </td>
                                                <td>
                                                    <%= row.dob %>
                                                </td>
                                                <td>
                                                    <%= row.age %>
                                                </td>
                                                <td>
                                                    <a href="/edit/<%= row._id %>" class="text-success">
                                                        <i class="fas fa-edit fa-lg mx-1"></i>
                                                    </a>

                                                    <a href="/delete/<%= row._id %>" class="text-danger">
                                                        <i class="fas fa-trash fa-lg mx-1"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <h1 class="text-center text-secondary mt-5">
                                        No Nurses found in the database!
                                    </h1>
                                    <% } %>
                        </div>
            </div>
        </div>
    </div>
    <%- include('layouts/footer') %>